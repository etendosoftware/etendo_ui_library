{
  "compilerOptions": {
    "declaration": true,
    "outDir": "./dist",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "strict": true,
    "target": "esnext",
    "skipLibCheck": true,
    "types": ["react", "react-native", "jest", "node"],
    "resolveJsonModule": true
  },

  "include": ["src", "src/assets"],
  "exclude": ["node_modules"]
}
